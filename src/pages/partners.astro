---
import { Image } from "astro:assets"
import CloudCamp from "../assets/img/partners/cloudcamp.jpeg"
import CodeCrafter from "../assets/img/partners/codecraftersio.jpeg"
import CodiumAI from "../assets/img/partners/codium.png"
import ContactOut from "../assets/img/partners/contactout.png"
import BaseLayout from "../layouts/BaseLayout.astro"
import Pragma from "../assets/img/partners/pragma.png"

const info = {
  titleTeam: "Partners",
  partnersTeam: [
    {
      name: "Pragma",
      description:
        "Pragma transforma empresas a través de la tecnología con más de 25 años de experiencia. Se especializa en IA, soluciones en la nube y plataformas digitales para finanzas y retail.",
      logo: Pragma,
      url: "https://www.pragma.co/",
    },
    {
      name: "CloudCamp",
      description:
        "Te convertimos en un experto en todos los temas de la nube, con cursos en vivo.",
      logo: CloudCamp,
      url: "https://cloudcamp.la/",
    },
    {
      name: "ContactOut",
      description:
        "ContactOut es una extensión simple del navegador que te ayuda a encontrar direcciones de correo electrónico y números de teléfono de cualquier persona en LinkedIn.",
      logo: ContactOut,
      url: "https://contactout.com/",
    },
    {
      name: "CodeCrafters",
      description:
        "CodeCrafters es una comunidad de desarrolladores que aprenden a programar contribuyendo a proyectos de código abierto.",
      logo: CodeCrafter,
      url: "https://codecrafters.io/",
    },
    {
      name: "Codium AI",
      description:
        "Con CodiumAI, obtienes análisis no triviales (¡y triviales también!) sugeridos directamente dentro de tu IDE o plataforma Git.",
      logo: CodiumAI,
      url: "https://www.codium.ai/",
    },
  ],
}
---

<BaseLayout title="Partners">
  <div
    class="max-w-5xl mx-auto my-16 p-8 bg-tc-black border border-gray-700 rounded-lg shadow-xl text-center mt-24"
  >
    <!-- Título -->
    <h2 class="text-3xl lg:text-4xl font-extrabold text-tc-gray-l mb-6">
      {info.titleTeam}
    </h2>

    <hr class="border-t border-gray-600 mb-8" />

    <!-- Grid de Partners -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 h-full">
      {
        info.partnersTeam.map((partner) => (
          <a
            href={partner.url}
            target="_blank"
            rel="noopener noreferrer"
            class="group h-full"
          >
            <div class="w-full max-w-xs mx-auto bg-tc-black-l rounded-xl shadow-lg hover:shadow-2xl transition-transform transform hover:scale-105 p-6 flex flex-col justify-between items-center text-center border border-gray-700 hover:bg-tc-gray/20 min-h-[420px] h-full">
              {/* Badge con el nombre */}
              <span class="inline-block px-3 py-1 mb-2 rounded-full bg-tc-yellow text-tc-black text-xs font-bold shadow-md -mt-8 z-10 relative border border-tc-black group-hover:bg-tc-black group-hover:text-tc-yellow transition-colors">
                {partner.name}
              </span>
              <div class="flex-1 flex flex-col justify-center w-full">
                <Image
                  class="rounded-lg h-32 w-32 object-contain mb-4 shadow-md border-2 border-gray-600 bg-white p-2 mx-auto"
                  src={partner.logo}
                  alt={partner.name}
                />
                <p class="text-gray-200 text-sm min-h-[60px] flex items-center justify-center flex-1">
                  {partner.description}
                </p>
              </div>
              <span class="mt-4 inline-flex items-center gap-1 text-tc-yellow text-xs font-semibold group-hover:underline">
                Visitar sitio
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-4 w-4"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 7l-10 10m0 0h7m-7 0V7"
                  />
                </svg>
              </span>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</BaseLayout>
